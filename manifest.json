{
  "manifest_version": 2,
  "name": "Chatwork Style",
  "version": "2.1",
  "content_scripts": [
    {
      "matches": ["*://www.chatwork.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["tabs", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Chatwork styling"
  }
}